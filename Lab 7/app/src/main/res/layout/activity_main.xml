<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michaeltang.lab7.MainActivity">

    <fragment
        android:id="@+id/fragment_category"
        android:name="com.example.michaeltang.lab7.CategoryFragment"
        android:layout_width="158dp"
        android:layout_height="481dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_category"
        />

    <FrameLayout
        android:id="@+id/fragment_contact_detail"
        android:name="com.example.michaeltang.lab7.ContactDetailFragment"
        android:layout_width="189dp"
        android:layout_height="479dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_category"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_contact_detail" />

</android.support.constraint.ConstraintLayout>
